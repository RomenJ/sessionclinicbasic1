{% extends 'base.html.twig' %}

{% block title %}Medico index{% endblock %}

{% block body %}
    <h1>Medico index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Dateborn</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medico in medicos %}
            <tr>
                <td>{{ medico.id }}</td>
                <td>{{ medico.name }}</td>
                <td>{{ medico.surname }}</td>
                <td>{{ medico.dateborn ? medico.dateborn|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_medico_show', {'id': medico.id}) }}">show</a>
                    <a href="{{ path('app_medico_edit', {'id': medico.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medico_new') }}">Create new</a>
{% endblock %}
